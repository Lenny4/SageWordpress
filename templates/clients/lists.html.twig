<table class="wp-list-table widefat fixed striped table-view-list users">
  <thead>
  {% include 'common/wp_list_header_footer.html.twig' with {'name': 'header'} %}
  </thead>
  <tbody id="client-list">
  {% for edge in users['data']['fComptets']['edges'] %}
    {% set ctNum = edge['node']['ctNum'] %}
    <tr id="client-{{ ctNum }}">
      <th scope="row" class="check-column">
        <label class="label-covers-full-cell" for="client_{{ ctNum }}">
          <span class="screen-reader-text">{{ 'Select'|trans }}{{ ctNum }}</span>
        </label>
        <input type="checkbox" name="clients[]" id="client_{{ ctNum }}" value="{{ ctNum }}">
      </th>
      {% for prop, value in edge['node'] %}
        {% if not (showCtNumField == false and prop == 'ctNum') %}
          <td data-colname="{{ prop }}">{{ value }}</td>
        {% endif %}
      {% endfor %}
    </tr>
  {% endfor %}
  </tbody>
  <tfoot>
  {% include 'common/wp_list_header_footer.html.twig' with {'name': 'footer'} %}
  </tfoot>
</table>
