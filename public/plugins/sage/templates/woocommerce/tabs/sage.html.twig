{% if responseError is not null %}
  {{ responseError }}
{% endif %}
{% if hasChanges %}
  <div class="notice notice-info is-dismissible">
    {% for action in ['removed', 'added', 'modified'] %}
      {% if metaChanges[action] is iterable and metaChanges[action] is not empty %}
        <ul>
          {% for key, value in metaChanges[action] %}
            <li>
              <code>{{ key }}</code>:
              {% if action == 'modified' %}
                {{ 'changé en' | trans }} <strong>{{ value }}</strong>
              {% elseif action == 'added' %}
                {{ 'ajouté avec la valeur' | trans }} <strong>{{ value }}</strong>
              {% elseif action == 'removed' %}
                {{ 'supprimé' | trans }} ({{ 'la valeur précédente était' | trans }} <strong>{{ value }}</strong>)
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    {% endfor %}
  </div>
{% endif %}
{% if updateWordpress is not empty %}
  <div class="notice notice-warning is-dismissible">
    <p>{{ 'Les modifications effectuées sur ce produit n\'ont pas encore été prises en compte dans Sage'|trans }}</p>
    <p>{{ 'Date des modifications'|trans }} : {{ updateWordpress }}</p>
  </div>
{% endif %}
<div data-sage-pcattarifs="{{ pCattarifs|json_encode }}"></div>
<div data-sage-pcatcomptas="{{ pCatComptas|json_encode }}"></div>
<div data-sage-ffamilles="{{ fFamilles|json_encode }}"></div>
<div data-sage-punites="{{ pUnites|json_encode }}"></div>
<div data-sage-product="{{ productMeta|json_encode }}"></div>
<div id="{{ panelId }}" class="panel hidden">
  <div class="skeleton skeleton-box"></div>
</div>

